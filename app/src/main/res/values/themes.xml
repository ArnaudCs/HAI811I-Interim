<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Interim" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_red</item>
        <item name="colorPrimaryVariant">@color/secondary_red</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary_orange</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="colorAccent">@color/primary_red</item>
        <!-- Customize your theme here. -->
        <item name="placeholderTextColor">@color/dark_grey</item>
        <item name="hintTextColor">@color/dark_grey</item>
        <item name="android:textColor">@color/black</item>
        <item name="boxBackgroundColor">@color/box</item>
        <item name="cardBackgroundColor">@color/cards</item>
    </style>

    <style name="ThemeDark.Interim" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_red</item>
        <item name="colorPrimaryVariant">@color/secondary_red</item>
        <item name="colorOnPrimary">@color/almost_black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary_orange</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="colorAccent">@color/primary_red</item>
        <!-- Customize your theme here. -->
        <item name="placeholderTextColor">@color/white</item>
        <item name="hintTextColor">@color/white_less_opaque</item>
        <item name="android:textColor">@color/white</item>
        <item name="boxBackgroundColor">@color/dark_darkgrey</item>
        <item name="cardBackgroundColor">@color/dark_darkgrey</item>

    </style>

    <style name="Theme.Interim.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Interim.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Interim.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>