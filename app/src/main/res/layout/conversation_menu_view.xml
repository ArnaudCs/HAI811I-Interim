<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/conversationContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5">

        <LinearLayout
            android:id="@+id/checkDelete"
            android:layout_width="0dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:visibility="gone"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/primary_red"
                android:foregroundTint="@color/primary_red"
                android:textColorHighlight="@color/primary_red"
                android:textColorLink="@color/primary_red"></CheckBox>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/messageBubble"
            android:layout_width="0dp"
            android:background="@drawable/messagebox"
            android:weightSum="8"
            android:layout_marginTop="20dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:layout_weight="5"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:layout_weight="2">

                <ImageView
                    android:id="@+id/profilePic"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/profileex"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"></ImageView>

            </LinearLayout>




            <LinearLayout
                android:layout_width="0dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_weight="4">

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Florian"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/lastMsg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minLines="1"
                    android:maxLines="1"
                    android:text="Il faudrait que tu m'envoi le dernierrelevÃ©"
                    android:textColor="@color/black"
                    android:textSize="17sp"></TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_weight="2">

                <ImageView
                    android:id="@+id/openConv"
                    app:tint="@color/black"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:backgroundTint="@color/grey"
                    android:foregroundTint="@color/grey"
                    android:src="@drawable/baseline_arrow_forward_ios_24"
                    android:visibility="gone">

                </ImageView>

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/unRead"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/newmessage"
                    android:layout_width="50dp"
                    android:layout_height="50dp"></com.airbnb.lottie.LottieAnimationView>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>



</RelativeLayout>